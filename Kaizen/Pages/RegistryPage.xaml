<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kaizen.Pages.RegistryPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Margin="0,0,0,0" HorizontalOptions="Center">
                <Label Text="Sign Up" FontSize="Header" TextColor="#BB2020"/>
            </StackLayout>
            <StackLayout Grid.Row="1" Margin="40,0,40,0" VerticalOptions="CenterAndExpand">
                <Label Text="Basics:" FontSize="Medium" TextColor="#BB2020"/>
                <Entry x:Name="enTFirstName" TextColor="#0D0D0D" Placeholder="First Name" PlaceholderColor="#737373"/>
                <Entry x:Name="enTLastName" TextColor="#0D0D0D" Placeholder="Last Name" PlaceholderColor="#737373"/>
                <Entry x:Name="enTIdentificationCard" TextColor="#0D0D0D" Placeholder="Identification Card" PlaceholderColor="#737373"/>
                <Entry x:Name="enTCellPhone" TextColor="#0D0D0D" Placeholder="Cell Phone (0987458753)" PlaceholderColor="#737373"/>
                <Label Text="Credentials:" FontSize="Medium" TextColor="#BB2020"/>
                <Entry x:Name="enTEmail" TextColor="#0D0D0D" Placeholder="Email" PlaceholderColor="#737373"/>
                <Entry x:Name="enTPassword" TextColor="#0D0D0D" Placeholder="Password" PlaceholderColor="#737373" IsPassword="True"/>
                <Entry x:Name="enTConfirmPassword" TextColor="#0D0D0D" Placeholder="Confrim Password" PlaceholderColor="#737373" IsPassword="True"/>
                <Button x:Name="signUp" Margin="10" Text="sign Up !" BackgroundColor="#3AC6F2" TextColor="White" CornerRadius="15" HeightRequest="40" Clicked="SignUp_Clicked"/>
            </StackLayout>            
        </Grid>
    </ContentPage.Content>
</ContentPage>